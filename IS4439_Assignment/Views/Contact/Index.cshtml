<script>
    function confirmMessage() {
        var txtName = document.getElementById("txtName");
        var txtEmail = document.getElementById("txtEmail");
        var txtSubject = document.getElementById("txtSubject");
        var txtMessage = document.getElementById("txtMessage");

        //Make sure all fields have been entered before submitting the message
        if (txtName.value == "" || txtEmail.value == "" || txtSubject.value == "" || txtMessage.value == "") {
            document.getElementById('confirmation').style.display = "none";
            document.getElementById('error').style.display = "block";
        } else {
            //Display a confrimation message to the user that their enquiry has been sent
            document.getElementById('error').style.display = "none";
            document.getElementById('confirmation').style.display = "block";

            txtName.value = "";
            txtEmail.value = "";
            txtSubject.value = "";
            txtMessage.value = "";
        }
    }
</script>

